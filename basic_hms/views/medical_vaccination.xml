<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="medical_vaccination_tree_view" model="ir.ui.view">
        <field name="name">medical.vaccination.tree.view</field>
        <field name="model">medical.vaccination</field>
        <field name="arch" type="xml">
            <list string="Vacunas">
                <field name="vaccine_product_id" string="Vacuna"/>
                <field name="dose" string="Dosis"/>
                <field name="institution_partner_id" string="Institución"/>
                <field name="date" string="Fecha de aplicación"/>
                <field name="next_dose_date" string="Próxima dosis"/>
                <field name="vaccine_expiration_date" string="Vencimiento de la vacuna"/>
                <field name="vaccine_lot" string="Lote"/>
                <field name="observations" string="Observaciones"/>
            </list>
        </field>
    </record>

    <record id="medical_vaccination_form_view" model="ir.ui.view">
        <field name="name">medical.vaccination.form.view</field>
        <field name="model">medical.vaccination</field>
        <field name="arch" type="xml">
            <form string="Vacunas">
                <group colspan="4" col="4">
                    <field name="vaccine_product_id" string="Vacuna"/>
                    <field name="dose" string="Dosis"/>
                    <field name="institution_partner_id" string="Institución"/>
                    <field name="date" string="Fecha de aplicación"/>
                    <field name="next_dose_date" string="Próxima dosis"/>
                    <field name="vaccine_expiration_date" string="Vencimiento"/>
                    <field name="vaccine_lot" string="Lote"/>
                    <field name="observations" string="Observaciones"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
